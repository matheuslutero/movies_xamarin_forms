<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xfw.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <Color x:Key="PrimaryColor">#000000</Color>
            <Color x:Key="PrimaryDarkColor">#000000</Color>
            <Color x:Key="AccentColor">#96d1ff</Color>
            <Color x:Key="WhiteColor">#ffffff</Color>
            <Color x:Key="DefaultBackgroundColor">#121212</Color>
            <Color x:Key="DefaultTextColor">#E1E1E1</Color>
            <Color x:Key="LightTextColor">#A5A5A5</Color>
            
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="BarTextColor" Value="{StaticResource WhiteColor}"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>